{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ],
}